#include <iostream>
using namespace std;
void merge(int arr[],int l,int r,int mid){
    int n1=mid-l+1;
    int n2=r-mid;
    int a[n1];
    int b[n2];
    	for(int i=0;i<n1;i++){
	    a[i]=arr[l+i];   // as arr start from index l
      }
	for(int i=0;i<n2;i++){
	    b[i]=arr[mid+i+1]; // as r is 3(means 4 elemnt)and l is 0 then mid is 1 but arr start from 2
      }
    int i=0;
    int j=0;
    int k=l;
    while(i<n1 && j<n2){
        if(a[i]<b[j]){
            arr[k]=a[i];
            i++;k++;
        }
        else {
            arr[k]=b[j];
            j++;k++;
        }
        
    }
    while(i<n1){
        arr[k]=a[i];
        k++;i++;
    }
     while(j<n2){
        arr[k]=b[j];
        k++;j++;
    }
    
    
}

void mergesort(int arr[],int l,int r){
    if(l<r){
        int mid=(l+r)/2;
        mergesort(arr,l,mid);
        mergesort(arr,mid+1,r);
        merge(arr,l,r,mid);
        
    }
}

int main() {
	// your code goes here
	int arr[]={4,3,5,6,7,8};
	mergesort(arr,0,5);
	for(int i=0;i<6;i++){
	    cout<<arr[i]<<" ";
	    
	}
	
	return 0;
}
